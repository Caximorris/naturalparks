<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Add a New Park</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/naturalparks" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="naturalpark[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input type="text" class="form-control" id="location" name="naturalpark[location]" required>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Images</label>
                    <input class="form-control" type="file" id="images" name="image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" name="naturalpark[description]" required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="tourprice">Tour Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="tourprice-label">$</span>
                        <input type="number" class="form-control" id="tourprice" name="naturalpark[tourprice]"
                            placeholder="0.00" aria-label="tourprice" aria-describedby="tourprice-label" required>
                    </div>
                </div>
                <div class="mb-3">
                    <a href="/naturalparks" class="btn btn-secondary btn-block text-white">Cancel</a>
                    <input type="submit" class="btn btn-primary btn-block" value="Add Park">
                </div>
            </form>
        </div>
    </div>